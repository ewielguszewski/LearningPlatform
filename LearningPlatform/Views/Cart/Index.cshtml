@{
}


<h2>Your Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Course Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Course.Title</td>
                    <td>
                        <form method="post" asp-action="RemoveFromCart" asp-route-courseId="@item.Course.Id">
                            <button type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form method="get" asp-action="Checkout">
        <button type="submit">Proceed to Checkout</button>
    </form>
}
