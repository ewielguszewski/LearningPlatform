@{
}

<h1>@Model.FullName</h1>
<img src="@Model.ProfilePictureUrl" alt="Profile picture" />
<p>@Model.Bio</p>

@if (Model.IsInstructor)
{
    <p>Total Students: @Model.TotalStudents</p>
    <p>Average Rating: @Model.AverageRating</p>

    <h2>Courses Created</h2>
    @foreach (var course in Model.CreatedCourses)
    {
        <div>
            <h3>@course.Title</h3>
            <p>@course.Description</p>
            <p>Price: @course.Price</p>
            <p>Students: @course.TotalStudents</p>
            <p>Rating: @course.AverageRating</p>
        </div>
    }
}
else
{
    <h2>Purchased Courses</h2>
    @foreach (var course in Model.PurchasedCourses)
    {
        <div>
            <h3>@course.Title</h3>
            <p>@course.Description</p>
        </div>
    }
}
